FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

// NOTE: different boundary conditions as in the original publication
// of Popinet in 2009
boundaryField
{
    inlet
    {
       
	//type		fixedValue;// for diagonal cases
	//value		uniform 0; //...
 	type            zeroGradient;
    }
    outlet
    {
        type            fixedValue;
        value           uniform 0;
    }
    mantle
    {
	//type		fixedValue;//...
	//value		uniform 0; //...       
	type            zeroGradient;
    }
}


