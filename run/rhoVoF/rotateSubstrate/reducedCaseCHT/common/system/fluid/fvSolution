FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
//Direct copy from Jun
//script declares the solving algos for the specific field variables
//NONE HAVE BEEN VERIFIED, only parameterization lifted...

solvers
{
    "alpha.water.*" //Scheufler has very different settings for this solver!
    {
        advectionScheme   isoAdvection;
        isoFaceTol      1e-11;
        surfCellTol     1e-8;
        nAlphaBounds    3;
        snapTol         1e-12;
        clip            true;
        reconstructionScheme plicRDF;
        nAlphaSubCycles 1;
        cAlpha          1; // Note: cAlpha is not used by isoAdvector but must
                           // be specified because interfacePropertes object
                           // reads it during construction.
    }

    psiFinal
    {
        solver           PCG;
        preconditioner   DIC;
        tolerance        1e-7;
        relTol           0.00;
    }

    rhoCpLFinal
    {
        solver           diagonal;
        preconditioner   DILU;
        tolerance        1e-7;
        relTol           0.1;
    }

    rhoCpVFinal
    {
        solver           diagonal;
        preconditioner   DILU;
        tolerance        1e-7;
        relTol           0.1;
    }

    rho
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-7;
        relTol          0.1;
    }

    rhoFinal
    {
        $rho;
        tolerance       1e-7;
        relTol          0;
    }    


    ".*(rho|rhoFinal)"
    {
        solver          diagonal;
    }

    "pcorr.*" //Scheufler has very different settings for this solver!
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-10;	//Why has this one not a parameterization (luis)
        relTol          0;
    }

    p_rgh
    {
        solver          GAMG;
        smoother        DICGaussSeidel;
        tolerance       1.0e-9;	//@!p_tol!@;
        relTol          0.001;
    }

    p_rghFinal //Scheufler has very different settings for this solver!
    {
        $p_rgh;
        tolerance       1.0e-9;	//@!p_tol!@;
        relTol          0;
    }

    U
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1.0e-8;	//@!u_tol!@;
        relTol          0;
    }

    "(U|h|T.*|k|epsilon|R)"
    {
        solver           smoothSolver; //PBiCGStab;
        smoother         symGaussSeidel;
        //preconditioner   DILU;
        tolerance        1e-7;
        relTol           0.;
        minIter          15;
        maxIter          50;
    }

    "(U|h|T.*|k|epsilon|R)Final"
    {
        $U;
        tolerance        1e-7;
        relTol           0;
        maxIter          50;
    }
}


PIMPLE
{
    momentumPredictor no;
    nCorrectors     4;	//@!n_correctors!@; //THIS VALUE IS set in default.parameter and in setup.parameter...!!!
    nOuterCorrectors 3;	//@!n_outer_correctors!@;	//Wolfdynamics recommand a value of atleast 5 for moving bodies and to use Piso-ita or Pimple(luis) The other parameterfile sets 30?!
    nNonOrthogonalCorrectors 0;	//@!n_non_orth_correctors!@;
    pRefCell        0;
    pRefValue       0;			//wolfdynamics also adds "correctPhi	yes;"??? (luis)
}

relaxationFactors
{
    equations
    {
        "h.*"           1;
        "U.*"           1;
    }
}

